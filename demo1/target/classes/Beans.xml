<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="trial.Address">
    <constructor-arg name="street" value="Ring road"></constructor-arg>
    <constructor-arg name="city" value="Akola"></constructor-arg>
    <constructor-arg name="state" value="MH"></constructor-arg>
    <constructor-arg name="zip" value="444001"></constructor-arg>
    <constructor-arg name="country" value="India"></constructor-arg>
    
    </bean>
    
    <bean id="obj" class="trial.Customer">
     <constructor-arg name="customerId" value="003 "></constructor-arg>
     <constructor-arg name="customerName" value="hrushi"></constructor-arg>
     <constructor-arg name="customerContact" value="9834078661 "></constructor-arg>
     <constructor-arg name="customerAddress" ref="address"></constructor-arg>
     
    </bean>

</beans>